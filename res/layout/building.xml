<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/page_bar">
	<ImageView android:id="@+id/NoticeImageView"
		   android:src="@drawable/page_arview" 
		   android:layout_height="50dip" 
		   android:layout_width="70dip" 
		   android:padding="5dip"
		   android:layout_alignParentLeft="true"/>
		   
	<TextView android:id="@+id/NoticeTextView" 
			android:layout_width="100dip"
			android:layout_height="50dip"
			android:textSize="20dip"
			android:textStyle="normal|bold"
			android:gravity="center_vertical" 
			android:text="건물정보"
			android:textColor="#ffffff"
			android:typeface="normal"
			android:layout_toRightOf="@+id/NoticeImageView"/>
	<ImageButton
			android:id="@+id/LittleHomeBtn"
			android:src="@drawable/little_home_clicked"
			android:background="#00000000"
			android:layout_width="40dip"
			android:gravity="center_vertical"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_margin="8dip"/>
	</RelativeLayout>
    <LinearLayout
    	android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent">
        <ImageView android:paddingRight="3dip" 
		        android:id="@+id/ImageView01" 
		        android:paddingTop="5dip" 
		        android:layout_height="match_parent" 
		        android:paddingLeft="3dip" 
		        android:layout_margin="10dip" 
		        android:layout_width="200dip">
		</ImageView>
		
    	<ScrollView
    	android:layout_marginTop="10dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">   
    	<LinearLayout
    		android:orientation="vertical"
    		android:layout_width="wrap_content"
    		android:layout_height="match_parent">
	    <TextView
	    	android:id="@+id/buildText"
	    	android:layout_width="fill_parent"
	    	android:background="@drawable/build_line" 
	    	android:textColor="#000069"
	    	android:text="  □건물이름" 
	    	android:textSize="15dip" 
	    	android:layout_height="25dip"/>
	    <TextView
	    	android:id="@+id/buildText2"
	    	android:layout_width="fill_parent"
	    	android:text="" 
	    	android:paddingLeft="6dip" 
	    	android:paddingTop="2dip" 
	    	android:textSize="14dip" 
	    	android:layout_height="25dip"/>
	    <TextView
	    	android:id="@+id/buildText3"
	    	android:layout_width="fill_parent"
	    	android:text="  □설명" 
	    	android:background="@drawable/build_line" 
	    	android:textColor="#000069"
	    	android:textSize="15dip" 
	    	android:layout_height="25dip" />
	    <TextView
	    	android:id="@+id/buildDescript"
	    	android:layout_width="fill_parent"
	    	android:text="" 
	    	android:paddingLeft="6dip" 
	    	android:minHeight="50dip" 
	    	android:paddingTop="2dip" 
	    	android:textSize="14dip" 
	    	android:layout_height="wrap_content"/>
	    <TextView
	    	android:id="@+id/buildText5"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" 
	    	android:background="@drawable/build_line" 
	    	android:textColor="#000069"
	    	android:text="  □편의시설" 
	    	android:textSize="15dip"/>
	    <TextView
	    	android:id="@+id/buildRest"
	    	android:layout_width="fill_parent"
	    	android:text="랩실, 자판기" 
	    	android:paddingLeft="6dip" 
	    	android:paddingTop="2dip" 
	    	android:textSize="14dip" 
	    	android:layout_height="40dip"/>
	    <TextView
	    	android:id="@+id/buildText7"
	    	android:layout_width="fill_parent"
	    	android:textSize="15dip" 
	    	android:textColor="#000069"
	    	android:text="  □전화번호" 
	    	android:background="@drawable/build_line"  
	    	android:layout_height="25dip"/>
	    <RelativeLayout
	    	android:layout_width="fill_parent"
	    	android:layout_height="30dip">
	    <TextView
	    	android:id="@+id/buildTele"
	    	android:layout_width="wrap_content"
	    	android:paddingLeft="6dip" 
	    	android:layout_height="30dip" 
	    	android:paddingTop="2dip"
	    	android:layout_alignParentLeft="true" 
	    	android:textSize="14dip"/>
	    <ImageButton
	    	android:id="@+id/callBtn"
	    	android:layout_toRightOf="@+id/buildTele"
	    	android:layout_width="wrap_content"
	    	android:layout_height="30dip"
	    	android:src="@android:drawable/sym_action_call"
	    	android:background="#00000000"/>
	    </RelativeLayout>
	   </LinearLayout>
	   </ScrollView>  
	</LinearLayout> 
</LinearLayout>